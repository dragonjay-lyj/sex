---
import MainLayout from '../layouts/MainLayout.astro';
import GameContainer from '../components/GameContainer.jsx';
import { motion } from 'framer-motion';
---

<MainLayout 
  title="控射小游戏 | 互动控制挑战" 
  description="参与控射小游戏，接受主人的指令，挑战你的控制力，体验独特的互动娱乐！"
>
  <div class="min-h-screen flex flex-col justify-center pb-20">
    <!-- 标题部分 -->
    <motion.div 
      initial={{ y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.8, delay: 0.2 }}
      className="text-center mb-8 px-4"
    >
      <h1 class="text-4xl md:text-6xl font-bold bg-clip-text text-transparent 
                bg-gradient-to-r from-green-400 to-emerald-500 leading-tight 
                drop-shadow-xl animate-title-glow">
        调教指令系统
      </h1>
      <p class="mt-6 text-lg md:text-xl text-gray-300 max-w-2xl mx-auto 
               backdrop-blur-sm bg-gray-800/30 p-4 rounded-2xl border border-gray-700/50
               transition-all hover:bg-gray-800/40">
        <span class="block mb-2 text-emerald-400">❝ 欢迎来到欲望的试炼场 ❞</span>
        遵从主人的指令，在倒计时归零前完成任务，证明你值得拥有快感的权利...
      </p>
    </motion.div>

    <!-- 游戏容器 -->
    <motion.div
      initial={{ scale: 0.95 }}
      animate={{ opacity: 1, scale: 1 }}
      transition={{ duration: 0.6, delay: 0.5 }}
      className="max-w-4xl mx-auto w-full px-4"
    >
      <GameContainer 
        client:visible 
      />
    </motion.div>

    <!-- 装饰性元素 -->
    <div class="absolute inset-x-0 top-0 h-40 bg-gradient-to-b from-emerald-500/10 to-transparent 
               -z-10 pointer-events-none" />
    <div class="absolute inset-x-0 bottom-0 h-40 bg-gradient-to-t from-gray-900 to-transparent 
               -z-10 pointer-events-none" />
  </div>
</MainLayout>

<style>
  /* 自定义动画 */
  @keyframes title-glow {
    0%, 100% { text-shadow: 0 0 10px rgba(52, 211, 153, 0.3); }
    50% { text-shadow: 0 0 20px rgba(16, 185, 129, 0.5); }
  }
  .animate-title-glow {
    animation: title-glow 2s ease-in-out infinite;
  }
</style>