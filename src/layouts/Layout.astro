---
import { ViewTransitions } from 'astro:transitions';
const title = '控射挑战 - 互动小游戏网站';
const description = '参与控射挑战，测试你的控制力，体验刺激的互动小游戏。';
const canonicalUrl = 'https:/edge.dragonjay.top';
---

<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="控射挑战, 互动小游戏, 控制力测试" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:locale" content="zh_CN" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Game",
        "name": "控射挑战",
        "description": "一个基于时间和指令的互动小游戏，测试玩家的控制力。",
        "genre": "互动游戏",
        "inLanguage": "zh-CN",
        "url": "https://yourdomain.com",
        "publisher": {
          "@type": "Organization",
          "name": "控射挑战团队"
        }
      }
    </script>
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="preload" href="/fonts/custom-font.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <ViewTransitions />
  </head>
  <body class="bg-gray-900 text-white">
    <header class="p-4 text-center bg-gray-800" role="banner">
      <nav class="flex justify-center space-x-4" role="navigation" aria-label="主导航">
        <a href="/" class="text-white hover:text-green-400 transition" aria-label="首页">首页</a>
      </nav>
    </header>
    <main class="container mx-auto p-4" role="main">
      <slot />
    </main>
    <footer class="p-4 text-center text-gray-500 bg-gray-800" role="contentinfo">
      © 2023 控射挑战. 保留所有权利.
	  联系: <a href={`mailto:lyjcody@foxmail.com`} class="transition-colors duration-300 focus:outline-none focus:ring-2 ml-1 xs:ml-2" aria-label={`Send email to lyjcody@foxmail.com`}>lyjcody@foxmail.com</a>
    </footer>
  </body>
</html>